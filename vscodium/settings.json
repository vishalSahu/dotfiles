{
    "breadcrumbs.enabled": true,

    "editor.cursorBlinking": "solid",
    // "editor.cursorStyle": "block-outline",
    "editor.fontFamily": "'JetBrains Mono', 'Fira Code', Menlo",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.fontWeight": "400",
    "editor.lineHeight": 0, // use 0 to compute from fontsize
    "editor.minimap.enabled": false,
    "editor.occurrencesHighlight": false,
    "editor.rulers": [
        100,
        120
    ],
    "editor.scrollBeyondLastLine": false,
    "editor.showFoldingControls": "mouseover",
    "editor.suggestSelection": "first",
    "editor.tabSize": 2,
    "editor.tokenColorCustomizations": {
        // "comments": "#6d6d6d"  // override comment color from the theme
    },
    "editor.wordWrap": "off", // use vim <gq> command instead
    "editor.matchBrackets": "near",

    "explorer.openEditors.visible": 0,
    "explorer.confirmDragAndDrop": false,

    "extensions.ignoreRecommendations": true,

    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 60000,
    "files.exclude": {
        "**/.git": true,
        "**/.idea": true,
        "**/.DS_Store": true,
        "**/.project": true,
        "**/.settings": true,
    },
    "files.trimTrailingWhitespace": true,

    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "update.mode": "none",

    "terminal.external.osxExec": "kitty.app",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.fontFamily": "'JetBrains Mono', 'Fira Code', Menlo",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.lineHeight": 1,
    "terminal.integrated.scrollback": 5000,

    "window.zoomLevel": 0,
    "window.title": "${activeEditorMedium}${separator}${rootName}",

    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "Cobalt Next",
    "workbench.colorCustomizations": {
        "editorLineNumber.foreground": "#797979",
        "editorLineNumber.activeForeground": "#ffbb00",
        "editorCursor.foreground": "#dfd1aaee",
        "editorCursor.background": "#1f1f1f",
        "terminalCursor.foreground": "#dfd1aaee",
        // "editor.background": "#1f2329",
        // "editor.lineHighlightBackground": "#303640",
        // "editorGutter.background": "#0a1313"
    },
    "workbench.editor.decorations.colors": true,
    "workbench.editor.decorations.badges": true,
    "workbench.editor.enablePreviewFromCodeNavigation": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.pinnedTabSizing": "shrink",
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.wrapTabs": true,
    "workbench.fontAliasing": "antialiased",
    "workbench.iconTheme": "vs-seti",
    "workbench.settings.editor": "json",
    "workbench.statusBar.visible": true,
    // "workbench.tree.indent": 8,
    // "workbench.tree.renderIndentGuides": "always",


    ///////////////////////////////////////////////////////////////////////////////////////////////
    // Language Specific Settings
    ///////////////////////////////////////////////////////////////////////////////////////////////
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": true
    },

    "[python]": {
        "editor.tabSize": 4
    },


    ///////////////////////////////////////////////////////////////////////////////////////////////
    // Extensions
    ///////////////////////////////////////////////////////////////////////////////////////////////
