    // vim plugin
    "vim.easymotion": true,
    "vim.enableNeovim": true,
    "vim.foldfix": true,
    "vim.handleKeys": {
        "<C-a>": true,
        "<C-f>": true
    },
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.leader": "<space>",
    "vim.neovimPath": "/usr/local/bin/nvim",
    // "vim.searchHighlightColor": "#fa7035ce",
    // "vim.searchHighlightTextColor": "#2e2e2d",
    "vim.textwidth": 100, // use gq to format lines to 100 chars
    "vim.useSystemClipboard": false,
    "vim.useCtrlKeys": true,
}
