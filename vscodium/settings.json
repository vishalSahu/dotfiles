    // Id: liviuschera.noctis
    // Link: https://marketplace.visualstudio.com/items?itemName=liviuschera.noctis
    //
    // Name: Cobalt Next
    // Id: dline.cobaltnext
    // Link: https://marketplace.visualstudio.com/items?itemName=dline.CobaltNext
    //
    // Name: Cobalt2 Theme Official
    // Id: wesbos.theme-cobalt2
    // Link: https://marketplace.visualstudio.com/items?itemName=wesbos.theme-cobalt2
    //
    // Might be useful
    // Name: Settings Sync
    // Id: shan.code-settings-sync
    // Link: https://marketplace.visualstudio.com/items?itemName=Shan.code-settings-sync
